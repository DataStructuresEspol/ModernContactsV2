<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="590.0" prefWidth="390.0" style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #50e4d8,#FFFFFF);" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dsa.contacts.controllers.LoginController">
   <children>
      <Label text="Iniciar Sesión">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="35.0" />
         </VBox.margin>
      </Label>
      <VBox prefWidth="100.0">
         <children>
            <Label text="Correo:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" prefWidth="100.0">
         <children>
            <TextField fx:id="userNameField" maxWidth="300.0" prefHeight="26.0" prefWidth="323.0" promptText="juan@example.com">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <VBox prefWidth="100.0">
         <children>
            <Label text="Contraseña:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" prefWidth="100.0">
         <children>
            <PasswordField fx:id="passwordField" maxWidth="300.0" prefHeight="26.0" prefWidth="254.0" promptText="Contraseña">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </PasswordField>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onMouseClicked="#SignUp" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 10;" text="Iniciar Sesion">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets bottom="5.0" top="50.0" />
         </VBox.margin>
      </Button>
      <Label text="¿No tienes una cuenta?">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onMouseClicked="#SignIn" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 10;" text="Registrarse">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
